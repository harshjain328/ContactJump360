<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noobs.contactjump360.AddContact">

    <EditText
        android:id="@+id/edName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_toStartOf="@+id/btnPlacePick"
        android:drawableLeft="@drawable/ic_friend_24dp"
        android:drawablePadding="16dp"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edName"
        android:layout_below="@+id/edName"
        android:layout_marginTop="26dp"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="16dp"
        android:hint="Phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPhone"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@+id/btnPlacePick"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="16dp"
        android:hint="Address"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnPlacePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edAddress"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="Location"
        android:textAllCaps="false" />

</RelativeLayout>
